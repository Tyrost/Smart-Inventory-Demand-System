[mysqld]
# Strict mode for safer inserts/updates
sql_mode=STRICT_TRANS_TABLES,NO_ENGINE_SUBSTITUTION

# Use UTF-8 everywhere (full emoji/unicode support)
character-set-server=utf8mb4
collation-server=utf8mb4_0900_ai_ci

# Increase max packet size (helps with bulk inserts)
max_allowed_packet=64M

# Reduce connection timeout for faster dev feedback
wait_timeout=28800
interactive_timeout=28800

# Log errors to stderr (Docker picks this up)
log_error=/dev/stderr

# Disable DNS reverse lookups for faster connections
skip-name-resolve
